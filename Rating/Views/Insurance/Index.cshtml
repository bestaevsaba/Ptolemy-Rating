@model List<Person>

<div class="row">

    <div class="col-9">
        <div class="row">
            <h3>Список клиентов</h3>
        </div>
        <a href="insurance/trap">Добавить клиента</a>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Имя</th>
                        <th>Возраст</th>
                        <th>Тип страхования</th>
                        <th>Ежемесячная сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model?.Count; i++)
                    {
                        <tr>
                            <td>@(1 + i)</td>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].MonthlyPay</td>
                            <td><a href="#">Редактировать</a></td>
                            <td><a href="#">Удалить</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>